@model RegistrationRequestDto

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<form asp-controller="Auth" asp-action="Register" method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Register</h1>
            <div class="row text-center">
                <div class="row">
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <input asp-for="Email" class="form-control" placeholder="Email ... "></input>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <input asp-for="Name" class="form-control" placeholder="Name ... "></input>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber ... "></input>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <input asp-for="Password" class="form-control" placeholder="password ... "></input>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                            <option disabled selected>-- Select Role --</option>
                        </select>
                    </div>
                    <div class="col-12 col-md-6 offset-md-3 pd-2">
                        <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
